@{
    ViewData["Title"] = "Interview Calendar";
}

<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

<div class="container my-4">
    <h2 class="mb-4">Interview Calendar</h2>

    <div id="calendar"></div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-controller="Interview" asp-action="Schedule" class="btn btn-primary">
            Schedule Interview
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            ← Back to Home
        </a>
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'timeGridWeek', // You can change this to 'dayGridMonth' for a month view
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay'
            },
            slotMinTime: '08:00:00',
            slotMaxTime: '22:00:00',
            nowIndicator: true,
            events: '/Interviews/GetInterviews', // The controller action that returns JSON
            eventColor: '#0d6efd',
            eventDisplay: 'block',
            height: 'auto',
            timeZone: 'local'
        });

        calendar.render();
    });
</script>

<style>
    #calendar {
        max-width: 100%;
        margin: 0 auto;
    }
</style>
