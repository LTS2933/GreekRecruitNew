@model GreekRecruit.Models.User

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5" style="max-width: 400px;">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Login</h2>
            <div class="text-center">
                <img src="~/images/greekrecruit_logo.png" style="height:100px;" alt="GreekRecruit Logo" />
            </div>

            <form asp-controller="Login" asp-action="SubmitData" method="POST" class="mt-4">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" id="email" asp-for="email" class="form-control" autofocus />
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" asp-for="username" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" asp-for="password" class="form-control" />
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
